# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# Optional: For temporary credentials
AWS_SESSION_TOKEN=

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME=aibom-app
APP_PORT=8080

# -----------------------------------------------------------------------------
# Database / Storage
# -----------------------------------------------------------------------------
# DynamoDB table names
CONVERSATIONS_TABLE=aibom-app-development-conversations
EMBEDDINGS_TABLE=aibom-app-development-embeddings

# S3 buckets
DATA_BUCKET=aibom-app-development-data
KNOWLEDGE_BASE_BUCKET=aibom-app-development-knowledge-base

# Redis (local)
REDIS_URL=redis://localhost:6379

# ChromaDB (local)
CHROMA_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Bedrock Configuration
# -----------------------------------------------------------------------------
BEDROCK_AGENT_ID=your-agent-id
BEDROCK_AGENT_ALIAS_ID=your-alias-id
BEDROCK_KNOWLEDGE_BASE_ID=your-kb-id

# Default models
DEFAULT_CHAT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
DEFAULT_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# -----------------------------------------------------------------------------
# Security / Monitoring
# -----------------------------------------------------------------------------
# Snyk Token (for security scanning)
SNYK_TOKEN=your-snyk-token

# Sentry DSN (for error tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# CI/CD
# -----------------------------------------------------------------------------
# GitHub repository (for OIDC authentication)
GITHUB_ORG=your-github-org
GITHUB_REPO=your-repo-name

# ECR repository
ECR_REPOSITORY=aibom-app

# -----------------------------------------------------------------------------
# Local Development
# -----------------------------------------------------------------------------
# LocalStack endpoint (for local AWS service emulation)
LOCALSTACK_ENDPOINT=http://localhost:4566

# Enable local mode (uses LocalStack instead of real AWS)
USE_LOCALSTACK=true

